<div class="banner" style="background: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://picsum.photos/2000/600?grayscale&blur=2') center/cover;">
  <div class="container">
    <h1>Louez le jardin parfait pour vos événements</h1>
    <p>Découvrez des jardins uniques près de chez vous</p>
    <%= link_to "Découvrir les jardins", gardens_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>

<div class="container mt-5">
  <div class="row">
    <div class="col-12">
      <h2 class="text-center mb-4">Jardins en vedette</h2>
    </div>
  </div>
  <div class="row">
    <% @featured_gardens.each do |garden| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= garden.title %></h5>
            <p class="card-text"><%= garden.description %></p>
            <p class="text-success"><strong><%= garden.price_per_day %>€/jour</strong></p>
            <%= link_to "Voir détails", garden_path(garden), class: "btn btn-outline-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
