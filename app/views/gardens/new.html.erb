<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <h1>Publier votre jardin</h1>
      <p class="text-muted">Partagez votre espace vert avec la communauté</p>

      <%= simple_form_for @garden do |f| %>
        <div class="card">
          <div class="card-body">
            <%= f.input :title,
                        label: "Titre de votre annonce",
                        placeholder: "ex: Magnifique jardin secret au cœur de Paris",
                        required: true %>

            <%= f.input :description,
                        as: :text,
                        label: "Description",
                        placeholder: "Décrivez votre jardin, ses particularités, ce qui le rend unique...",
                        input_html: { rows: 4 },
                        required: true %>

            <%= f.input :address,
                        label: "Adresse",
                        placeholder: "ex: 15 rue de la Paix, 75001 Paris",
                        required: true %>

            <%= f.input :price_per_day,
                        label: "Prix par jour (€)",
                        placeholder: "ex: 50",
                        required: true %>

            <%= f.input :photos,
                        as: :file,
                        input_html: { multiple: true },
                        label: "Photos de votre jardin",
                        hint: "Vous pouvez sélectionner plusieurs photos" %>

          </div>
        </div>

        <div class="d-flex justify-content-between mt-4">
          <%= link_to "Retour", gardens_path, class: "btn btn-outline-secondary" %>
          <%= f.submit "Publier mon jardin", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
