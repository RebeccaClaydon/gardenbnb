<div class="container-fluid px-4 mt-4">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Tous les jardins</h1>
      </div>
    </div>
  </div>

  <div class="row">
    <!-- JARDINS À GAUCHE -->
    <div class="col-lg-7">
      <div class="row">
        <% if @gardens.any? %>
          <% @gardens.each do |garden| %>
            <div class="col-lg-6 mb-4">
              <div class="card h-100">
                <img src="https://picsum.photos/id/<%= rand(1..100) %>/400/200" class="card-img-top" alt="<%= garden.title %>">
                <div class="card-body d-flex flex-column">
                  <h5 class="card-title"><%= garden.title %></h5>
                  <p class="card-text text-muted"><%= garden.address %></p>
                  <p class="card-text"><%= truncate(garden.description, length: 100) %></p>
                  <div class="mt-auto">
                    <div class="d-flex justify-content-between align-items-center">
                      <span class="h5 text-success mb-0"><%= garden.price_per_day %>€/jour</span>
                      <%= link_to "Voir détails", garden_path(garden), class: "btn btn-outline-primary" %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="col-12 text-center">
            <h3>Aucun jardin disponible pour le moment</h3>
            <p>Soyez le premier à publier votre jardin !</p>
            <% if user_signed_in? %>
              <%= link_to "Publier un jardin", new_garden_path, class: "btn btn-primary" %>
            <% else %>
              <%= link_to "S'inscrire", new_user_registration_path, class: "btn btn-primary" %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- CARTE À DROITE -->
    <div class="col-lg-5">
      <div class="sticky-top" style="top: 20px;">
        <div style="width: 100%; height: 80vh; border-radius: 8px; overflow: hidden;"
          data-controller="map"
          data-map-markers-value="<%= @markers.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
      </div>
    </div>
  </div>
</div>
