<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <h1>Modifier votre jardin</h1>
      <p class="text-muted">Mettez à jour les informations de votre jardin</p>

      <%= simple_form_for @garden do |f| %>
        <div class="card">
          <div class="card-body">
            <%= f.input :title,
                        label: "Titre de votre annonce",
                        required: true %>

            <%= f.input :description,
                        as: :text,
                        label: "Description",
                        input_html: { rows: 4 },
                        required: true %>

            <%= f.input :address,
                        label: "Adresse",
                        required: true %>

            <%= f.input :price_per_day,
                        label: "Prix par jour (€)",
                        required: true %>

            <%= f.input :photos,
                        as: :file,
                        input_html: { multiple: true },
                        label: "Photos de votre jardin",
                        hint: "Vous pouvez sélectionner plusieurs photos" %>
          </div>
        </div>

        <div class="d-flex justify-content-between mt-4">
          <%= link_to "Retour", garden_path(@garden), class: "btn btn-outline-secondary" %>
          <div>
            <%= link_to "Supprimer", garden_path(@garden), data: {
                  confirm: "Êtes-vous sûr de vouloir supprimer ce jardin ?",
                  turbo_method: :delete
                }, class: "btn btn-outline-danger me-2" %>
            <%= f.submit "Mettre à jour", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
